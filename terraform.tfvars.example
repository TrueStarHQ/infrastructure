# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control

# Required: Your GCP project ID
project_id = "your-gcp-project-id"

# Required: Your OpenAI API key
openai_api_key = "sk-..."

# Optional: Override default region
# region = "us-central1"

# Optional: Environment name
# environment = "prod"

# Optional: Custom domain (requires DNS configuration)
# api_domain = "api.truestar.pro"

# Optional: Docker image (update after building your API)
# api_image = "gcr.io/your-project/truestar-api:latest"

# Optional: Cloud Run resource limits
# api_memory = "512Mi"
# api_cpu = "1"
# api_min_instances = 0
# api_max_instances = 100