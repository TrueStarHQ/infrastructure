# Copy this file to terraform.tfvars and fill in real values
# DO NOT commit terraform.tfvars to version control

# Required: Google Cloud project ID
project_id = "project-id"

# Required: Docker image for the API 
# Format: [REGION]-docker.pkg.dev/[PROJECT-ID]/[REPOSITORY]/[IMAGE]:[TAG]
# IMPORTANT: The [REGION] must match the Artifact Registry repository location
# Example: us-central1-docker.pkg.dev/my-project/truestar/api:latest
api_image = "[REGION]-docker.pkg.dev/[PROJECT-ID]/main/api:latest"

# Required: OpenAI API key
openai_api_key = "sk-..."

# Optional: Override default region
# region = "us-central1"

# Optional: Environment name
# environment = "prod"

# Optional: Custom domain (requires DNS configuration)
# api_domain = "api.truestar.pro"

# Optional: Cloud Run resource limits
# api_memory = "512Mi"
# api_cpu = "1"
# api_min_instances = 0
# api_max_instances = 100